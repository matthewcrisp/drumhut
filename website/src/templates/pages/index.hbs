---

title: Home
heading: 'The Drum Hut'
lead: West African Percussion

layout: home.hbs

showInNav: true
navOrder: 1
---

<section id="hero" class="light-typo ">
    <div class="container welcome-content">
        <div class="row">
            <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12 text-center wow fadeInUp">
                <img id="logo" src="{{assets}}/img/drumhut-logo-white.png" class="img-responsive text-center" alt="drumhut logo" width="100%">                
                <h3>{{ lead }}</h3>
                <ul class="social-links text-center">
					<li><a href="#djembes" class="smooth-scroll" alt="Djembes"><img src="{{assets}}/img/Djembe Icon 3.png" style="margin-top:8px; margin-left:0px"></img></a></li>
                    <li><a href="#dunun" class="smooth-scroll" alt="Dunun"><img src="{{assets}}/img/Dunun Icon 3.png" style="margin-top:8px"></img></a></li>
					<li><a href="#accessories" class="smooth-scroll" alt="Sound Demos"><i class="icon-youtube"></i></a></li>					
                </ul>
            </div>
        </div>
    </div>
    <div class="overlay-bg"></div>
    <div id="hero-slides">
        <div class="slides-container">
            <img src="{{assets}}/img/djembebanner.jpg" alt="">
            <img src="{{assets}}/img/Guinea1Foot.jpg" alt="">
            <img src="{{assets}}/img/sierpinski2.jpg" alt="">
			<img src="{{assets}}/img/ramanujan2.jpg" alt="">
        </div>
    </div>
</section>

<section id="djembes" class=" padding-top-bottom">
    <div class="container">
        <header class="section-header text-center wow fadeInUp">
            <h2>Our Djembes</h2>
        </header>
    </div>
    <div class="container">
        <div id="projects-container" class="row">
            
            {{#each djembes}}
            <article class="design product col-xs-12 col-sm-6 col-md-4 wow fadeInUp" data-wow-delay="0.2s">
				{{> product-link this }}
            </article> 
            {{/each}}

        </div>
    </div>

</section>

<section id="dunun" class="gray-bg padding-top-bottom ">
 <div class="container">
        <header class="section-header text-center wow fadeInUp">
            <h2>Our Dunun</h2>
        </header>
    </div>
    <div class="container">
        <div id="projects-container" class="row">
            
            {{#each dunun}}
            <article class="design product col-xs-12 col-sm-6 col-md-4 wow fadeInUp" data-wow-delay="0.2s">
				{{> product-link this }}
            </article> 
            {{/each}}

        </div>
    </div>


</section>

<section id="accessories" class="padding-top-bottom ">
    <div class="container">
        <header class="section-header text-center wow fadeInUp">
            <h2>Our Accessories</h2>
        </header>
    </div>
    <div class="container">
        <div id="projects-container" class="row">
            
            {{#each accessories}}
            <article class="design product col-xs-12 col-sm-6 col-md-4 wow fadeInUp" data-wow-delay="0.2s">
				{{> product-link this }}
            </article> 
            {{/each}}

        </div>
    </div>
</section>

