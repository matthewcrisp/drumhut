    <div class="wrapper">

      <section class="padding-top-bottom">
          <div class="container" style="padding-top:30px">
              <div class="row">
				<div class="flexBox">
                  <div class="col-xs-12 col-sm-4 a wow fadeInLeft text-center">
                      <header class="section-header cta-message">
                          <h1>{{ name }}</h1>
                          <h2>{{ price }}</h2>
                          </header>
            					  <p>{{{ description }}}</p>
                        <div class="small">
                           <p>{{ description2 }}</p>
                       </div>

                        <div class="col-xs-12 col-sm-12 b fadeInLeft text-center">	 
							{{#if showEnquireButton}}
					   <a href="mailto:crispy@thedrumhut.co.uk?Subject=Accessories: {{ name }}" class="btn btn-primary" style="margin:5px">Enquire</a>
							{{/if}}
						 {{#if available}}
						 <br>
						 <a href="{{{etsy-link}}}" class="btn btn-primary" style="margin:5px"><font size="4.5em">Buy on Etsy</font></a>
						 {{/if}}
						</div>
                  </div>
				  
                  <div class="col-xs-12 col-sm-8 cta-message c wow fadeInUp">
                      <div class="slide-wrapper" id="product-slides-container">
                         <div id="product-slides">
                            <div class="slides-container">
                                {{#each images}}
                                <img src="{{../assets}}/{{.}}" alt="" class="slide-wrapper__image img-rounded">
                                {{/each}}
                            </div>
                        </div>
                      </div>
					  
                      

                  </div>
 
				</div>
              </div>
          </div>
      </section>
	  
	 </div>

    {{> global-footer }}

    {{> global-scripts }}

  </body>
