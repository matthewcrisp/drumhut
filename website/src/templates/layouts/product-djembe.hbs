<!DOCTYPE html>
<html ng-app="storeApp">
  <head>
    
  {{> global-head }}

  </head>

  <body id="home">

    {{> global-header }}

    <section class="hero-image-bg light-typo welcome-section">
        <div class="overlay-bg"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12 text-center wow fadeInUp">                                 

                </div>
            </div>
        </div>
    </section>

    <div class="wrapper">

      <section class="padding-top-bottom">
          <div class="container">
              <div class="row">
                  <div class="col-md-4 wow fadeInLeft text-center">
                      <header class="section-header cta-message">
                          <h1>{{ name }}</h1>
                          <h3>{{ price }}</h3>
                          <h4>Height: {{ height }}</h4>
            						  <h4>Diameter: {{ diameter }}</h4>
            						  <h4>Wood: {{ wood }}</h4>
            						  <h4>Skin: {{ skin }}</h4>
            						  <h4>Finish: {{ finish }}</h4>						   
                        </header>
            					  <p>{{{ description }}}</p>
                        <div class="small">
            					     <p>{{ description2 }}</p>
					             </div>
								 </div>
								

                       
                  
                  <div class="col-md-8 cta-message wow fadeInUp text-center">
                      <div class="slide-wrapper" id="product-slides-container">
                         <div id="product-slides" data-length="{{ images.length }}">
                            <div class="slides-container">
                                {{#each images}}														
                                <img src="{{../assets}}/{{.}}" alt="" class="slide-wrapper__image">								
                                {{/each}}
                            </div>
                        </div>
                      </div>
                      {{> body }}

                  
				  
				  
								 {{#unless sold}}
                       <a href="mailto:crispy@thedrumhut.co.uk?Subject=Djembe: {{ name }}" class="btn btn-primary" style="margin-top:5px">Enquire</a>
								 
								 <br>
								 
						<a href="{{{etsy-link}}}" class="btn btn-primary" style="margin-top:5px"><font size="4.5em">Buy on Etsy</font></a>
								 {{/unless}}
								 
					</div>
              </div>	
			{{#if video}}
			  <div class="row" style="padding-top:20px">	
				<div class="col-md-6 col-md-offset-5 col-sm-8 col-sm-offset-2">
					{{{ videoCode }}}
				</div>
			  </div>
			  {{/if}}
      </section>

    </div>

    {{> global-footer }}

    {{> global-scripts }}

  </body>
</html>

